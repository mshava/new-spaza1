<DOCTYPE html>
<html lang = "en">
<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head>
<title>
Login Here
</title>
<head>
<style>
body{
  background-color: #4e5d6a;
  font-family: "Open Sans", sans-serif;
}

.message{
  color: #eb3a2e;
}

#container{
  background-image:url(PersonaNthabiseng.png);
  background-size: cover;
  max-width: 700px;
  margin: 5% auto;
  padding: 50px;
  background-color:#FAAC58;
  border-radius: 6px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #BFFF00;
  border: 5px solid #848484;
  border-radius: 6px;
  border-height:6px;
  border-right-width: 5px;
  opacity:0,71;
}

.text-center{
  text-align: center;
  margin-bottom: 1em;
}

/* Form CSS*/

form{

  align :center;
  padding: 6px;
}

label{
  display: block;
  margin-top: 10px;
}

input,textarea{
  display:block;
  margin: 05px 0;
  font-size: 1.2em;
  outline: 0;
  background-color: #aacce9;
  border: 3px solid #4e5d6a;
  width: 30%;
  padding: 5px;
}

input:focus, textarea:focus{
  transition: .5s ease-in-out;
  -webkit-transform: scale(1.05);
  border-color: #aacce9;
  background-color: #D8F6CE;
}
body{
                background-image:url("./store1.jpg");
                background-repeat: no-repeat;
                background-position: center center;
                background-attachment: fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
                align:center;
            }

button{
  font-size: 1em;
  padding: 10px;
  background-color: #F781D8;
  color: #fff;
  border: 1px solid #4e5d6a;
  border-radius: 5px;
  box-shadow: 0 3px 0 0 #4e5d6a;
  outline: 0;
  box-shadow: 0;
  display: block;
}

button:hover{
  transition: .75s ease-in-out;
  background-color: #90adc6;
}
</style>
</head>
<body>
<div id = "container">
    <ul class ="people_list">
        <h1>Login</h1>
        <form method ="POST" action= "/login">

            Username:<br /><input type="username"name="username" class='col-xs-12 form-control'/><br />
            Password:<br /><input type="password" name="password" required autofocus><br />
            <input type = "submit"/>
        </form>
        <h3>You don't have an account sign up <a href="/signup">here</a><h3>
    </ul>
</div>
    <script>


  $('form').on('submit',function(){
  $(this).find('.password').remove();
  //  get each form input for validation

  var username = $('#username').val().trim(),
      name = $('#name').val().trim(),
      password = $('#password').val().trim(),
      role = $('#role').val().trim();

  //  check for empty fields

  if (username === ""){
    $('#username')
      .focus()
      .after('<span class="message">Please fill in your username!</span>');
  }
  else if (password === ""){
    $('#password').focus().after('<span class="message">Please fill in your password!</span>');
  }
  else if (role === ""){
    $('#role').focus().after('<span class="message">Please add your role!</span>');
  }else if
    (name === ""){
      $('#name')
      .focus()
      .after('<span class="message">Please fill in your name!</span>');
  }

  // Test AJAX
  else{
    $.ajax({
      success: function(){
        $('form').hide();
        $('.container').empty().append("<h2 class='text-center'>Information has been submited. Thank you!</h2><h3 class='text-center'>Please reload to start over</h3>");
      }
    });
  }
  return false; // prevent form from submitting
});

</script>


</body>

</html>
