<div id ="container">
	<div id="add-products">
		    <h1>Add product</h1>
		    <form action="/products/add" method="POST">
	            Product Name:<input value="{{name}}" name="name">
	            <br/><br/>Category Name:<select name="cat_id">
		                {{#categories}}
		                    <option value="{{id}}">{{name}}</option>
		                {{/categories}}
		            </select> 
	            <br /><br /><input type="submit">
	        </form>
		</div>
	</div>
  <br /><br />	


  <div id= "container">
	<div class="table-responsive">
		<form>
			<input id="searchBar" type="text" name="product"></input>
			<input class="searchBar" id="productSearchBar" type="text" name="product"></input>
		</form>
				<table class="table-responsive" id="productList">
					<table class="table">

						<thead>
							<tr>
								<th data-field="name">Product id</th>
								<th data-field="name">Product Name</th>
								<th data-field="name">Category Name</th>
							</tr>
						</thead>
							
						<tbody>	
							{{#products}}	
								<tr>
									<td><h2>{{product_id}}</h2></td>
									<td><h2>{{product_name}}</h2></td>
									<td><h2>{{category_name}}</h2></td>
								</tr>
							{{/products}}
						</tbody>

					</table>
				</table>
	</div>
</div>


<div id="container">
	<div class="table-responsive">
			<table class="table">
				<thead>
					<th data-field="name">Product Name</th> 
					<th data-field="name">Category Name</th> 
				</thead>
    			<tbody>
				{{#products}}
				<tr>
				    <td><h2>{{name}}</h2></td>
				    <td><h2>{{category_name}}</h2></td> 
					<td><a href="/products/edit/{{id}}">Edit</a></td>
					<td><a href="/products/delete/{{id}}">Delete</a></td>
				</tr>
				{{/products}}
		</tbody>
	</table>
</div>
</div>
	{{#empty}}
		<p>The list is empty</p>
	{{/empty}}
	
